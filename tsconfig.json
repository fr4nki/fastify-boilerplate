{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "~/*": ["source/*"],
      "*": [
        "node_modules/*",
        "source/types/vendor/*"
      ]
    }
  },
  "include": [
    "source/**/*"
  ]
}
